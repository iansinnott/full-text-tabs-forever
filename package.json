{
  "name": "full-text-tabs-forever",
  "version": "2.0.0",
  "description": "A web extension for searching your full browsing history.",
  "main": "index.js",
  "scripts": {
    "//dev": "vite build -w was failing. something about the chrome extension vite plugin and the manifest. re-saving the manifest makes -w work, but that defeats the purpose of automated watch",
    "dev:chrome": "TARGET=chrome concurrently 'bun run build:content --watch' 'bun run build:main --watch'",
    "dev": "concurrently 'bun run build:content --watch' 'bun run build:main --watch'",
    "//build": "it's ultimately chrome's fault that we need a separate build for content-script. Unlike the service worker you cannot specify type:module, so... the script can't have imports.",
    "build": "bun run build:content && bun run build:main",
    "build:content": "vite build -c vite.config.content-script.ts",
    "build:main": "vite build",
    "release": "yarn version && ./scripts/release.sh",
    "build:clean": "rm -rf ./dist/*",
    "build:chrome": "TARGET=chrome bun run build",
    "build:firefox": "TARGET=firefox bun run build",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "type-check": "bun tsc --noEmit",
    "test": "bun test"
  },
  "type": "module",
  "keywords": [
    "search",
    "browser history",
    "postgres",
    "pgvector",
    "vector search",
    "chrome extension"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "~0.5.3",
    "@tailwindcss/line-clamp": "~0.4.2",
    "@tailwindcss/typography": "~0.5.9",
    "@types/archiver": "6.0.1",
    "@types/bun": "1.1.6",
    "@types/chrome": "~0.0.210",
    "@types/node": "~20.15.0",
    "archiver": "6.0.1",
    "autoprefixer": "~10.4.13",
    "concurrently": "~7.6.0",
    "postcss": "~8.4.21",
    "prettier": "3.1.0",
    "svelte-check": "~3.6.3",
    "svelte-preprocess": "~5.1.3",
    "tailwindcss": "~3.2.4",
    "tsx": "~3.12.2",
    "typescript": "~5.5.4",
    "vite": "~5.0.10",
    "vite-plugin-top-level-await": "1.4.4"
  },
  "dependencies": {
    "@electric-sql/pglite": "0.2.5",
    "@electric-sql/pglite-repl": "0.2.5",
    "@mozilla/readability": "~0.5.0",
    "@sveltejs/vite-plugin-svelte": "~3.1.2",
    "@types/turndown": "~5.0.1",
    "@types/webextension-polyfill": "~0.10.0",
    "@vlcn.io/crsqlite-wasm": "0.16.0",
    "@xenova/transformers": "2.17.2",
    "classnames": "~2.3.2",
    "lucide-svelte": "0.435.0",
    "svelte": "~4.0.0",
    "svelte-markdown": "~0.4.1",
    "svelte-spa-router": "^4.0.1",
    "turndown": "^5",
    "webextension-polyfill": "~0.10.0",
    "zod": "3.23.8"
  },
  "volta": {
    "node": "20.18.1"
  },
  "trustedDependencies": [
    "@swc/core",
    "protobufjs",
    "svelte-preprocess"
  ]
}
